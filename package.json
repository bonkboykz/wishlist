{
  "private": true,
  "scripts": {
    "dev": "npm-run-all -p dev:*",
    "dev:next": "next dev",
    "dev:codegen": "npm run codegen -- --watch",
    "dev:prisma": "npm-run-all -s prisma:push prisma:studio",
    "build": "next build",
    "start": "next start",
    "lint": "npm-run-all -p lint:*",
    "lint:js": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "lint:css": "stylelint '**/*.css' --fix",
    "format": "prettier --config .prettierrc '**/*.{js,ts,tsx,css,scss,md}' --write",
    "prepare": "husky install",
    "prisma:push": "prisma db push",
    "prisma:seed": "prisma db seed",
    "prisma:studio": "prisma studio",
    "codegen": "graphql-codegen --config codegen.yml"
  },
  "dependencies": {
    "@apollo/client": "^3.5.6",
    "@auth0/nextjs-auth0": "^1.7.0",
    "@graphql-codegen/cli": "^2.3.0",
    "@prisma/client": "^3.7.0",
    "apollo-server-micro": "^3.5.0",
    "graphql": "^15.8.0",
    "micro": "^9.3.4",
    "micro-cors": "^0.1.1",
    "next": "^12.0.7",
    "nexus": "^1.2.0-next.17",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "2.3.0",
    "@graphql-codegen/fragment-matcher": "^3.2.0",
    "@graphql-codegen/introspection": "2.1.0",
    "@graphql-codegen/typescript": "2.4.1",
    "@graphql-codegen/typescript-document-nodes": "2.2.1",
    "@graphql-codegen/typescript-operations": "2.2.1",
    "@graphql-codegen/typescript-react-apollo": "3.2.2",
    "@types/node": "^17.0.4",
    "@types/react": "^17.0.38",
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/parser": "^5.8.0",
    "autoprefixer": "^10.4.0",
    "eslint": "^8.5.0",
    "eslint-config-next": "12.0.7",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-react": "^7.28.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.4",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.4",
    "prettier": "^2.5.1",
    "prisma": "^3.7.0",
    "stylelint": "^14.2.0",
    "stylelint-config-css-modules": "^2.3.0",
    "stylelint-config-standard": "^24.0.0",
    "tailwindcss": "^3.0.0",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --cache --fix",
    "*.css": "stylelint --fix",
    "*.--write": "prettier --write"
  },
  "prisma": {
    "seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts"
  }
}
